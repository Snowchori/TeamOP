<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/id_register_first"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:padding="7dp"
                    android:hint=" 아이디"
                    android:inputType="text"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:background="@color/colorPrimary"
                    android:drawableLeft="@drawable/ic_person_black_24dp"/>

                <Button
                    android:id="@+id/isOverlapBtn_register_first"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_marginLeft="5dp"
                    android:text="중복 확인"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimaryDark" />

            </LinearLayout>

            <EditText
                android:id="@+id/password_register_first"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:padding="7dp"
                android:hint=" 비밀번호"
                android:inputType="textPassword"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:background="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_lock_black_24dp"/>

            <EditText
                android:id="@+id/passwordConfirm_register_first"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:padding="7dp"
                android:hint=" 비밀번호 재확인"
                android:inputType="textPassword"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:background="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_lock_black_24dp"/>

            <Button
                android:id="@+id/nextBtn_register_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="20dp"
                android:text="다음"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>