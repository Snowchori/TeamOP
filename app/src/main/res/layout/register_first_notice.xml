<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingHorizontal="25dp"
    android:paddingVertical="50dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:background="@drawable/custom">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_horizontal"
                android:text="Notice"
                android:textSize="23dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="5dp"
                android:background="#565656" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="팀원 추천 기능을 위해\n가입 시 MBTI 성격 검사 결과가 필요합니다." />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="ex)" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mbti_ex" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="나의 MBTI 검사 결과를 모른다면?" />

                <TextView
                    android:id="@+id/MBTIPage_register_first_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="검사하러 가기"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="5dp"
                android:background="#565656" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="[필수]개인 성향에 대한 정보 제공 동의"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/PIAgreement_register_first_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상세보기"
                    android:textColor="@color/colorPrimaryDark" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="'Optimization'이 본인의 개인정보를 수집/이용하는 것에 동의합니다."
                    android:textSize="10sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/agreeBox_register_first_notice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="동의"
                        android:textSize="11sp" />

                    <RadioButton
                        android:id="@+id/disagreeBox_register_first_notice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="동의하지 않음"
                        android:textSize="11sp" />

                </RadioGroup>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="5dp"
                android:background="#565656" />

            <Button
                android:id="@+id/nextBtn_register_first_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginHorizontal="20dp"
                android:text="다음"
                android:textColor="@color/colorAccent" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>