<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingVertical="10dp">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/previousBtn_list_footer"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:text="＜"
        android:textSize="10dp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:background="#DDDDDD"/>

    <Button
        android:id="@+id/firstBtn_list_footer"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:text="1"
        android:textSize="10dp"
        android:gravity="center"
        android:background="#DDDDDD"/>

    <Button
        android:id="@+id/secondBtn_list_footer"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:text="2"
        android:textSize="10dp"
        android:gravity="center"
        android:background="#DDDDDD"/>

    <Button
        android:id="@+id/thirdBtn_list_footer"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:text="3"
        android:textSize="10dp"
        android:gravity="center"
        android:background="#DDDDDD"/>

    <Button
        android:id="@+id/fourthBtn_list_footer"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:text="4"
        android:textSize="10dp"
        android:gravity="center"
        android:background="#DDDDDD"/>

    <Button
        android:id="@+id/fifthBtn_list_footer"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:text="5"
        android:textSize="10dp"
        android:gravity="center"
        android:background="#DDDDDD"/>

    <Button
        android:id="@+id/nextBtn_list_footer"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:text="＞"
        android:textSize="10dp"
        android:gravity="center"
        android:background="#DDDDDD"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>